# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================
# SERVER CONFIGURATION
# ============================================================
PORT=5000
NODE_ENV=development

# ============================================================
# DATABASE CONFIGURATION - Choose One
# ============================================================

# Option 1: MongoDB Local (Recommended for Development)
MONGODB_URI=mongodb://localhost:27017/awaaz

# Option 2: MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/awaaz?retryWrites=true&w=majority

# Option 3: PostgreSQL (Uncomment if using PostgreSQL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=awaaz_db
# DB_USER=awaaz_user
# DB_PASSWORD=your_password

# ============================================================
# JWT AUTHENTICATION
# ============================================================
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters_long_change_this
JWT_EXPIRES_IN=24h

# ============================================================
# CLOUDINARY CONFIGURATION (Image Uploads)
# ============================================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ============================================================
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_or_smtp_password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# ============================================================
# CORS CONFIGURATION
# ============================================================
CORS_ORIGIN=http://localhost:3000

# ============================================================
# ADMIN CONFIGURATION
# ============================================================
DOMAIN_NAME=@admin.awaaz.com

# ============================================================
# ENCRYPTION (Optional - for sensitive data)
# ============================================================
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_characters

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================
# FILE UPLOAD
# ============================================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# ============================================================
# LOGGING (Optional)
# ============================================================
LOG_LEVEL=debug
# LOG_FILE=logs/app.log
